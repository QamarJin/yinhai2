* {
	-webkit-user-select: none;
	-ms-touch-select: none;
}

@font-face {
	font-family: Muiicons;
	font-weight: normal;
	font-style: normal;
	src: url('../fonts/note1.ttf') format('truetype');
}

input[type="checkbox"] {
    width: 1.3em;
    height: 1.3em;
    margin-right: .4em;
}

.mui-icon-fangda:before {
	content: '\e70e';
	font-size: 1.4rem;
	color: #8B8878;
}

.mui-icon-kaishi:before{
	content: '\e643';
	font-size: 4rem;
	color: #FF0000;
}

.mui-icon-baocun:before{
	content: '\e625';
	font-size: 4rem;
	color: #8B8878;
}

.mui-icon-shanchu:before{
	content: '\e627';
	font-size: 4rem;
	color: #8B8878;
}

.my-icon-guanbi:before{
	content: "\e637";
	font-size: 1rem;
	color: #FF0000;
}

body {
	width: 100%;
	font-size: 16px;
	color: #6c6c6c;
	background-color: #F6F6F6;
	overflow: auto;
	margin: 0;
	padding: 0;
}

.rp {
	width: 100%;
	height: 100%;
	display: none;
	text-align: center;
	position: fixed;
	top: 0;
	background: rgba(0, 0, 0, 0.8);
	z-index: 9999;
	overflow: hidden;
}

.rtime {
	font-size: 22px;
	color: #FF0000;
}

.start {
	margin: 0 auto;
	width: 4rem;
	height: 4rem;
	background-image: url(../image/audio/icon_star.png);
	background-size: cover;
	background-repeat: no-repeat;
}

.stop {
	margin: 0 auto;
	width: 4rem;
	height: 4rem;
	background-image: url(../image/audio/icon_finish.png);
	background-size: cover;
	background-repeat: no-repeat;
}

.stop:active {
	-webkit-box-shadow: 0 3px 8px rgba(0, 0, 0, 0.5) inset;
	box-shadow: 0 3px 8px rgba(0, 0, 0, 0.5) inset;
}

.mui-bar {
	background: #0FA3E5;
}

#navTitle {
	background-color: #F6F6F6;
	height: 50px;
	position: fixed;
	float: left;
	top: 42px;
	z-index: 9999;
	box-shadow: 1px 2px 3px rgba(187, 187, 187, 0.2);
}

.dateclear {
	width: 30%;
	float: left;
}

.timebtn {
	width: 60%;
	height: 3rem;
	border: 0px;
	font-size: 1.2rem;
	line-height: 2.5rem;
	background-color: #F6F6F6;
	display: block;
	float: left;
	color: #333333;
}

.icon-clear {
	width: 4rem;
	height: 2rem;
	background: rgba(15, 161, 255, 1);
	color: #FFFFFF;
	text-align: center;
	line-height: 2rem;
	border-radius: 5px;
	margin-top: 0.6rem;
	float: left;
	display: none;
}

#navLeft {
	width: 75%;
	height: 50px;
	float: left;
	overflow: auto;
}

#navRight {
	width: 25%;
	height: 50px;
	float: right;
	overflow: auto;
}

#note_div {
	background-color: #FFFFFF;
	margin: 100px 1rem 0 1rem;
	padding: 1rem 1rem;
	border-radius: 8px;
	box-shadow: 0px 6px 20px 0px rgba(71, 71, 71, 0.1);
}


.card{
	overflow: auto;
	box-shadow: 2px 6px 20px 10px rgba(71, 71, 71, 0.1);
	padding: 1rem;
	margin:1rem auto;
	border-radius: 5px;
}

.card-header{
	height: 4rem;
	padding: 1rem;
	border-bottom: 1px solid #D8D8D8
}
.card-header>span:first-child{
	font-size: 1.5rem;
}
.textUploadBtn{
    height: 3rem;
    margin-top: 5px;
    background-image: linear-gradient(270deg,#048cff 0%,#3cd2fd 100%);
    border-radius: 1rem;
    float: right;
    font-size: 1.4rem;
    line-height: 1rem;
    color: #ffffff;
}
.card-header>.headerbtn{
	width: 5rem;
	height: 3rem;
	margin-top: -15px;
	background-image: linear-gradient(90deg,#048cff 0%,#3cd2fd 100%), linear-gradient(#0fa1ff, #0fa1ff);
	border-radius: 2rem;
	float: right;
	font-size: 1.4rem;
	line-height: 1rem;
	color: #ffffff;
}

.blue- {
	color: #0FA1FF;
	font-size: 2rem;
}
.textclass{
	font-size: 1.3rem;
	color: #000000;
	letter-spacing: 2px;
}

.close-video {
	color: red;
	position: absolute;
	margin-left: 180px;
	margin-top: -15px;
	font-size: 35px;
	z-index: 9;
}

.close-audio{
	position: absolute;
	margin-left: -13px;
	margin-top: -10px;
	z-index: 9;
	
}

.fullScreen {
	position: absolute;
	margin-left: -20px;
	margin-top: 157px;
	font-size: 30px;
	z-index: 9;
}
.photoBorder{
	float: left;
	position:relative;
	padding: 1rem;
	box-shadow: 0 0 10px rgba(187, 187, 187, 0.4);
}

img{
	width: 100px;
	height: 100px;
}

video{
	width:200px;
	height:200px;
}
.close-photo{
	position: absolute;
	margin-left: -12px;
	margin-top: -10px;
}
.videoBorder{
	margin-left: 20px;
	margin-top: 5px;
    box-shadow: 0 0 10px rgba(187, 187, 187, 0.4);
}

.audioBorder{
	float: left;
	position:relative;
	padding-right: 30px;
}

video::-webkit-media-controls-fullscreen-button {
	display: none;
}

/*img,
video {
	margin-left: 5px;
}*/

#camera,
#video,
#recordBtn {
	margin-right: 2.5rem;
	font-size: 50px;
	overflow: auto;
}

#notebox {
	background-color: #FFFFFF;
}

#notebox,
#photobox,
#videobox,
#recordbox {
	padding-top: 1rem;
	padding-bottom: 1rem;
	border-bottom: 1px solid #D8D8D8;
}

.notebox,
.photobox,
.videobox,
.recordbox {
	float: left;
	overflow: auto;
	padding-top: 1rem;
	padding-bottom: 1rem;
	border-bottom: 1px solid #D8D8D8;
	width: 100%;
}

audio{
	width: 250px;
}

@media only screen and (max-width: 900px) {
	#navLeft {
		width: 72%;
		height: 50px;
		float: left;
		overflow: auto;
	}
	#choselist{
		margin-right: 10px;
	}
	.icon-clear{
		position: absolute;
		margin-left: 120px;
	}
	#navRight {
		width: 28%;
		height: 50px;
		float: right;
	}
	#camera,
	#video,
	#recordBtn {
		margin-right: 1.5rem;
		font-size: 40px;
		line-height: 50px;
	}
	
	.audioBorder{
		float: left;
		position:relative;
		padding-right: 15px;
	}
	
	audio{
		width: 220px;
	}
}